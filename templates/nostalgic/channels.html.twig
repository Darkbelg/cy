{% extends 'nostalgic/index.html.twig' %}
{% block body %}
    <div class="flex flex-wrap items-center md:items-stretch flex-col md:flex-row">
        {% for result in results %}
            <div class="md:w-1/3 p-2">
                <div class="bg-white border-b-8 border-red-700 border-solid no-underline rounded hover:underline hover:text-white text-black text-center p-4 hover:bg-red-700 mb-8">
                    <a class="p-4 flex flex-col items-center" href="nostalgic/channel/{{ result.snippet.channelId }}/period/{{ period }}">
                        <div><img class="rounded"
                                  src="{{ result.snippet.thumbnails.default.url }}"
                                  alt=" {{ result.snippet.channelTitle }}"></div>
                        <div>
                            <p class="pt-1 align">
                                {{ result.snippet.channelTitle }}
                            </p>
                            <p>Channel created on {{ result.snippet.publishedAt |date("d F y") }}</p>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
