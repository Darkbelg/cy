{% block channel %}
{#    {{ dump(channel.items.0) }}#}
    <div class=" md:ml-4 mx-2 md:mx-0 bg-white border-b-8 border-red-700 border-solid no-underline rounded hover:underline hover:text-white text-black text-center flex flex-col content-center p-4 hover:bg-red-700 mb-8">
        <div class="self-center"><img class="rounded"
                                      src="{{ channel.items.0.snippet.thumbnails.default.url }}"
                                      alt=" {{ channel.items.0.snippet.title }}"></div>
        <div>
            <p class="pt-1 align">
                {{ channel.items.0.snippet.title }}
            </p>
            <p>Channel created on {{ channel.items.0.snippet.publishedAt |date("d F y") }}</p>
            <div>
                <div class="flex flex-row">
                    <div class="w-1/3 text-left">Subscribers:</div>
                    <div class="w-2/3 text-right"><span class="font-bold">{{ channel.items.0.statistics.subscriberCount | number_format(0, ',', ' ') }}</span>
                    </div>
                </div>
                <div class="flex flex-row">
                    <div class="w-1/3 text-left">Videos:</div>
                    <div class="w-2/3 text-right"><span class="font-bold">{{ channel.items.0.statistics.videoCount | number_format(0, ',', ' ') }}</span></div>
                </div>
                <div class="flex flex-row">
                    <div class="w-1/3 text-left">Views:</div>
                    <div class="w-2/3 text-right"><span class="font-bold">{{ channel.items.0.statistics.viewCount | number_format(0, ',', ' ') }}</span></div>
                </div>
            </div>
            <p class="text-left mt-4">{{ channel.items.0.snippet.description }}</p>
        </div>
    </div>
{% endblock channel %}
