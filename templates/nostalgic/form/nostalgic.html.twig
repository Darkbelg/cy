{% extends 'nostalgic/index.html.twig' %}

{% block body %}
    <div>
            {{ form_start(form) }}

        <div class="w-full max-w-sm">
            <div class="flex flex-row mb-3">
                <div class="w-1/3 self-center">
                {{ form_label(form.channel) }}</div>
                <div class="w-2/3 ml-2">
                {{ form_widget(form.channel) }}</div>
            </div>
            <div class="flex flex-row mb-3">
                <div class="w-1/3 self-center">
                {{ form_label(form.period) }}</div>
                <div class="w-2/3 ml-2">
                {{ form_widget(form.period) }}</div>
            </div>
            <div class="flex flex-row mb-3">
                <div class="w-1/3"></div>
                <div class="w-2/3 ml-2">
                {{ form_widget(form.search) }}
                {{ form_widget(form.feeling_lucky) }}
                </div>
            </div>
        </div>

            {{ form_end(form) }}
    </div>
{% endblock %}
